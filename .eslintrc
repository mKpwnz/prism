{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "prettier"
    ],
    "overrides": [
        {
            "files": [
                "*"
            ],
            "rules": {
                "import/prefer-default-export": "off",
                "no-new": "off",
                "no-restricted-syntax": "off",
                "no-underscore-dangle": "off",
                "no-await-in-loop": "off",
                "no-plusplus": "off",
                "import/no-extraneous-dependencies": "off", // TODO: @Etox kannst du dir das einmal bitte anschauen, warum er in der ExpressApp.ts am meckern ist?
                "no-param-reassign": "warn",
                "class-methods-use-this": "warn"
            }
        }
    ]
}