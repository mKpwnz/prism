{
    "compilerOptions": {
        "target": "ESnext",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "paths": {
            "@prism/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src",
        "../drizzle.config.ts"
    ],
    "exclude": [
        "node_modules",
    ],
}