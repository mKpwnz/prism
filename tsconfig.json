{
    "compilerOptions": {
        "target": "ESnext",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src",
        "types",
        "./src/types"
    ]
}